<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    >

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:onClick="onClick"
            android:text="C"
            android:textColor="@android:color/background_light"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/outPut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="70dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f9d5d5"
            android:onClick="onClick"
            android:text="7"
            android:textColor="@android:color/background_light"
            android:textSize="60dp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f9d5d5"
            android:onClick=""
            android:text="8"
            android:textColor="@android:color/background_light"
            android:textSize="60dp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f9d5d5"
            android:onClick=""
            android:text="9"
            android:textColor="@android:color/background_light"
            android:textSize="60dp" />

        <Button
            android:id="@+id/divide"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#a6d6d0"
            android:onClick=""
            android:text="รท"
            android:textColor="@android:color/background_light"
            android:textSize="60dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d9d5d5"
            android:onClick=""
            android:text="4"
            android:textColor="@android:color/background_light"
            android:textSize="60dp" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d9d5d5"
            android:onClick=""
            android:text="5"
            android:textColor="@android:color/background_light"
            android:textSize="60dp" />

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d9d5d5"
            android:onClick=""
            android:text="6"
            android:textColor="@android:color/background_light"
            android:textSize="60dp" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#79b4c1"
            android:onClick=""
            android:text="ร"
            android:textColor="@android:color/background_light"
            android:textSize="60dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#c9d5d5"
            android:onClick=""
            android:text="1"
            android:textColor="@android:color/background_light"
            android:textSize="60dp" />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#c9d5d5"
            android:onClick=""
            android:text="2"
            android:textColor="@android:color/background_light"
            android:textSize="60dp" />

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#c9d5d5"
            android:onClick=""
            android:text="3"
            android:textColor="@android:color/background_light"
            android:textSize="60dp" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4b5ba9"
            android:onClick=""
            android:text="+"
            android:textColor="@android:color/background_light"
            android:textSize="60dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#b9d5d5"
            android:onClick=""
            android:text="0"
            android:textColor="@android:color/background_light"
            android:textSize="60dp" />

        <Button
            android:id="@+id/subtract"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.12"
            android:background="#3d3a92"
            android:onClick=""
            android:text="-"
            android:textColor="@android:color/background_light"
            android:textSize="60dp" />

        <Button
            android:id="@+id/equals"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1c1354"
            android:onClick=""
            android:text="="
            android:textColor="@android:color/background_light"
            android:textSize="60dp" />

    </LinearLayout>


</LinearLayout>